<html>
  <head>
    <style>
      * {
        margin:0;
        padding:0;
        font-weight:normal;
        font-size:1em;
        line-height:1.3em;
      }
      body {
        width:384px;
        font-size: 15px;
        font-family:'Signika'
      }
      img.logo {
        display:block;
        float:left;
      }
      h1 {
        font-size:1.8em;
        text-align:center;
        margin-bottom:0.1em;
      }

      .order_number {
        text-align:center;
        margin-bottom:1.3em;
        font-size:1.2em;
      }

      .line_items {
        font-size:1.5em;
      }

      .line_items li.first {
        border-top: 1px dashed #000;
      }

      .line_items li {
        border-bottom: 1px dashed #000;
        padding:6px 0;
      }

      .line_items p {
        padding-left:60px;
        background-image: url('http://<%= host %>/checkbox.png');
        background-repeat:no-repeat;
        background-position:15px center;
      }
      
      .line_items .sku {
        font-size:0.8em;
      }

      .order_details_box {
        margin-top:5px;
      }
      .order_details_box img {
        float:left;
      }
      .order_details {
        padding-top:18px;
      }

      .help {
        clear:both;
        border-top: 1px dashed #000;
        text-align:center;
        font-size:1.2em;
        padding:10px 0;
      }
      
      .tax {
        margin-top:1em;
        width:100%;
      }
      
      .tax .title {
        text-align:right;
        padding-right:10px;
      }

      .companyinfo {
	float:right;
	padding-left:10px;
	font-size:12pt;
	margin-bottom:30px;
	}
	
    </style>
  </head>
  <body>
    <img src="https://cdn.shopify.com/s/files/1/0160/1302/t/2/assets/mono_logo.png" class="logo" />
<div class="companyinfo">THE OPEN COMPANY<BR>theopencompany.net<br>San Francisco, USA</div>

    <h1>Order for <%= order.shipping_address['name'] %></h1>
    <h2 class="order_number">Number <%= order.order_number %></h2>
    <ul class="line_items">
      <% order.line_items.each_with_index do |line_item, i| %>
        <li<%= ' class="first"' if i == 0 %>>
          <p>
            <span class="name"><%= line_item['name'] %></span>
            <br />
            <span class="sku"><%= line_item['sku'] %></span>
          </p>
        </li>
      <% end %>
    </ul>
    <table class="tax">
      <tr>
        <td class="title">Total</td>
        <td>£<%= order.total_price %></td>
      </tr>
      <% order.tax_lines.each do |tax_line| %>
        <tr>
          <td class="title"><%= tax_line['title'] %></td>
          <td>£<%= tax_line['price'] %></td>
        </tr>
      <% end %>
      <tr>
        <td class="title">VAT No.</td>
        <td>100000</td>
      </tr>
    </table>
    <div class="order_details_box">
      <img src="https://chart.googleapis.com/chart?chs=150x150&cht=qr&chl=http%3A%2F%2Fbackoffice.flexiscale.co%2Forder%2F<%= order.id %>">
      <div class="order_details">
        <h2>Shipping to:</h2>
        <p><%= order.full_shipping_address %></p>
      </div>
    </div>
    <p class="help">help@flexiscale.co</p>
  </body>
</html>
